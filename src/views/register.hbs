<div class='container'>
  <h2 class='text-center mt-4 mb-5'>Register Page</h2>

  <form>
    <div class='form-floating mb-4'>
      <input
        type='text'
        id='username'
        name='username'
        class='form-control'
        placeholder='Example-Username123'
      />
      <label for='username' class='form-label'>
        Username
      </label>
      <div id='usernameHelp' class='form-text ml-1'>Username must be at least 3
        and not above 20 characters. Mustn't contain any special symbols.</div>
    </div>

    <div class='form-floating mb-4'>
      <input
        type='password'
        id='password'
        name='password'
        class='form-control'
        placeholder='?EexamplePassword123!#'
      />
      <label for='password' class='form-label'>
        Password
      </label>
      <div id='passwordHelp' class='form-text ml-1'>Password must be at least 8
        and not above 20 characters. Must contain at least one number and one
        uppercase character. Mustn't contain any special symbols.</div>
    </div>

    <div class='form-floating mb-4'>
      <input
        type='email'
        id='email'
        name='email'
        class='form-control'
        placeholder='example@example.com'
      />
      <label for='email' class='form-label'>
        Email Address
      </label>
    </div>

    <div class='d-grid gap-2'>
      <button class='btn btn-primary' type='submit'>
        Register
      </button>
    </div>
  </form>
</div>