<div class='container'>
  <h2 class='text-center mt-4 mb-5'>Create Post</h2>

  <form>
    <div class='form-floating mb-4'>
      <input
        type='text'
        id='title'
        name='title'
        class='form-control'
        placeholder='ExampleTitle'
      />
      <label for='title' class='form-label'>
        Post Title
      </label>
      <div id='titleHelp' class='form-text ml-1'>Title must be at least 3 and
        not above 100 characters. Mustn't contain any special symbols.</div>
    </div>

    <div class='form-floating mb-4'>
      <textarea
        class='form-control'
        placeholder='Post description here'
        id='description'
        name='description'
        style='height: 90px;'
      ></textarea>
      <label for='description'>Post Description</label>
      <div id='titleHelp' class='form-text ml-1'>Description must be at least 10
        and not above 500 characters.</div>
    </div>

    <div class='d-grid gap-2'>
      <button class='btn btn-primary' type='submit'>
        Create Post
      </button>
    </div>
  </form>
</div>